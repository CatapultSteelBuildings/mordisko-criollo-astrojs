---
import Layout from '@layouts/Layout.astro';
import HeroContactSection from '@components/contact/HeroContact.section.astro';

/* Components */
import ContactFormSection from '@components/contact/ContactForm.section.astro';
import Delivery from '@components/shared/Delivery.astro';

/* Utils */
import { getLangFromUrl } from '@/i18n/utils';

/* Schemas */
import {
  CONTACT_SCHEMA_ES,
  CONTACT_SCHEMA_EN,
} from '@/core/data/schemas/ContactSchemas';

const lang = getLangFromUrl(Astro.url);

interface Props {
  location: string;
}

const ContactSchema = lang === 'es' ? CONTACT_SCHEMA_ES : CONTACT_SCHEMA_EN;

const title = lang === 'es' ? 'Contacto' : 'Contact';
const metaDescription = lang === 'es' ? 'Contacto' : 'Contact';
---

<Layout title={title} metaDescription={metaDescription} schema={ContactSchema}>
  <HeroContactSection />
  <ContactFormSection />
  <Delivery variant="secondary" />
</Layout>
