---
import Layout from '@layouts/Layout.astro';
import HeroContactSection from '@components/contact/hero-contact-section.astro';

/* Components */
import ContactFormSection from '@components/contact/contact-form-section.astro';
import Delivery from '@components/shared/Delivery.astro';

/* Utils */
import { getLangFromUrl } from '@/i18n/utils';

const lang = getLangFromUrl(Astro.url);

interface Props {
  location: string;
}

const { location } = Astro.props;

const title = lang === 'es' ? 'Contacto' : 'Contact';
const metaDescription = lang === 'es' ? 'Contacto' : 'Contact';
---

<Layout location={location} title={title} metaDescription={metaDescription}>
  <HeroContactSection />
  <ContactFormSection />
  <Delivery />
</Layout>
