---
import Layout from '@layouts/Layout.astro';
import HeroContactSection from '@components/contact/hero-contact-section.astro';
import ContactFormSection from '@components/contact/contact-form-section.astro';

const { lang = 'es', location } = Astro.props;

const title = 'Contacto';
const metaDescription = 'Contacto';
---

<Layout
  lang={lang}
  location={location}
  title={title}
  metaDescription={metaDescription}>
  <HeroContactSection lang={lang} />
  <ContactFormSection lang={lang} />
</Layout>
