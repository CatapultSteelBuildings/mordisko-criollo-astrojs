---
/* Components */
import Layout from '@layouts/Layout.astro';
import HeroHomeSection from '@components/home/Hero-home.astro';
import BusinessHomeSection from '@components/home/business-home.astro';
import ProductsHomeSection from '@components/home/Products-home.astro';
import SocialMediaHomeSection from '@components/home/social-media-home-section.astro';
import ContactHomeSection from '@components/home/contact-home-section.astro';

interface Props {
  location: string;
}

const { location } = Astro.props;

const title = 'Mordisko Criollo';
const metaDescription = 'Mordisko Criollo';
---

<Layout location={location} title={title} metaDescription={metaDescription}>
  <HeroHomeSection />
  <BusinessHomeSection />
  <ProductsHomeSection />
  <SocialMediaHomeSection />
  <ContactHomeSection />
</Layout>
