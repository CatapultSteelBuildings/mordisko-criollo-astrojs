---
/* Images */
import { Image } from 'astro:assets';

import logo from '@assets/images/logo/mordisko-criollo-logo-mid.webp';
---

<div class="hidden lg:flex lg:items-start lg:justify-center">
  <Image
    src={logo}
    alt="Mordisko Criollo"
    widths={[360, 500]}
    sizes="(max-width: 768px) 100vw, 500px"
    loading="lazy"
    fetchpriority="low"
    class="w-full max-w-[300px] max-lg:object-cover md:max-w-[500px]"
    decoding="async"
  />
</div>
