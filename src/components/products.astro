---
import Layout from '@layouts/Layout.astro';
import HeroProductsSection from '@components/products/HeroProducts.astro';
import ProductDescriptionSection from '@components/products/ProductDescription.section.astro';
import ProductsMainSection from '@components/products/ProductsMain.section.astro';

import { getLangFromUrl } from '@i18n/utils';

import {
  PRODUCT_SCHEMAS_ES,
  PRODUCT_SCHEMAS_EN,
} from '@data/schemas/ProductSchemas';

const lang = getLangFromUrl(Astro.url);

const ProductSchema = lang === 'es' ? PRODUCT_SCHEMAS_ES : PRODUCT_SCHEMAS_EN;

const title = 'Productos';
const metaDescription = 'Productos';
---

<Layout title={title} metaDescription={metaDescription} schema={ProductSchema}>
  <HeroProductsSection />
  <ProductDescriptionSection />
  <ProductsMainSection />
</Layout>
