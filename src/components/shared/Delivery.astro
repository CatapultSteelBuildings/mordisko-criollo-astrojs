---
import { Image } from 'astro:assets';
import { getLangFromUrl, useTranslations } from '@/i18n/utils';

interface Props {
  variant?: 'primary' | 'secondary';
  classes?: string;
}

import delivery from '@assets/images/others/domicilios-medellin.webp';
import logo from '@assets/images/logo/mordisko-criollo-logo.webp';

const { variant = 'primary', classes = '' } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const classesVariant =
  variant === 'primary'
    ? 'bg-(--primary) text-(--secondary)'
    : 'bg-(--secondary) text-(--primary)';
---

<div
  class={`flex flex-col items-center justify-center gap-3 px-3 py-6 ${classesVariant} ${classes}`.trim()}>
  <Image
    src={delivery}
    alt={t('delivery.message')}
    width={150}
    height={137}
    loading="eager"
    fetchpriority="low"
    class="ProductMainSectionItem__image"
    decoding="async"
  />
  <h3 class="text-xl italic">{t('delivery.message')}</h3>
</div>
