{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@assets/*": ["./assets/*"],
      "@components/*": ["./components/*"],
      "@config/*": ["./config/*"],
      "@layouts/*": ["./layouts/*"],
      "@data/*": ["./core/data/*"],
      "@i18n/*": ["./i18n/*"],
      "@interfaces/*": ["./core/interfaces/*"],
      "@types/*": ["./core/types/*"],
      "@utils/*": ["./core/utils/*"],
      "@validators/*": ["./core/validators/*"]
    }
  }
}
